<% start_date = trip.start_date&.strftime("%Y/%m/%d") %>
<% end_date   = trip.end_date&.strftime("%Y/%m/%d") %>

<div class="trip-card" style="border: 1px solid #e5e7eb; border-radius: 12px; background: #fff; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.02);">
  <%= link_to trip_path(trip), style: "display: block; padding: 16px; color: inherit; text-decoration: none;" do %>
    <p style="font-size: 14px; color: #6b7280; margin: 0 0 4px;">目的地</p>
    <p style="font-size: 16px; font-weight: 600; color: #111827; margin: 0 0 12px;"><%= trip.destination.presence || "未設定" %></p>

    <p style="font-size: 13px; color: #6b7280; margin: 0 0 6px;">タイトル</p>
    <p style="font-size: 18px; font-weight: 700; color: #111827; margin: 0 0 10px; line-height: 1.4;"><%= trip.title %></p>

    <p style="font-size: 13px; color: #374151; margin: 0;">期間: <%= [start_date, end_date].compact.join(" 〜 ") %></p>
  <% end %>
</div>
